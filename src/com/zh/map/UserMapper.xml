<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.mybatis.example.BlogMapper">
    <!--  查询  -->
    <select id="findById" resultType="User">
        select id,nikname,username,password,del_status
        from user
        where id = #{id}
    </select>

    <!--  添加  -->
    <insert id="add"> <!--useGeneratedKeys="true"keyProperty="id" useGeneratedKeys设置自动生成主键-->
        insert into user
        (nikname,username,password)
        values (#{nikname}, #{username}, #{password} )
    </insert>

    <!--  删除 -->
    <delete id="delete">
        delete from user where id = #{id}
    </delete>

    <!--  删除 -->
    <update id="update">
        update user set
          nikname = #{nikname},
          username = #{username},
          password = #{password},
          del_status = #{del_status}
        where id = #{id}
    </update>
</mapper>

